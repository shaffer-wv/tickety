<% provide(:title, @project.title) %>

<h1><%= @project.title %></h1>

<div class="tasklists">
  
  <div class="name">
    <h3>Task Lists</h3>
  </div>

  <div class="row">
    <div class="col-md-8">
      <ul class="task_list">
        <%= render @task_lists %>
      </ul>
    </div>
    <aside class="col-md-4">
      <div>
      <%= link_to "Add a task list", new_project_task_list_path(@project) %>
      </div>
      <div>
        <h5>Current task lists</h5>
      </div>
      <div>
        <h5>Completed task lists</h5>
      </div>
    </aside>
  </div>

</div>